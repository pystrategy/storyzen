#:import win kivy.core.window
#:import TabbedPanelItem kivy.uix.tabbedpanel

<Label>:
    font_name: 'fonts/NanumGothic.ttf'

<Button>:
    font_name: 'fonts/NanumGothic.ttf'


<Splash>:
    on_size: self.center = win.Window.center
    Image:
        source: root.source
        size: win.Window.size

<FieldMainButton>:
    pos: 100, 500
    size_hint: None, None
    width: 100
    height: 40
    text: '필드'
    FieldDropDown:

<Category@TabbedPanelItem>:
    font_name: 'fonts/NanumGothic.ttf'
    FloatLayout:
        FieldMainButton:

<Main>:
    TabbedPanel:
        hide: True
        do_default_tab: False

        Category:
            text: '인물'

        Category:
            text: '상황'

        Category:
            text: '행위 '
            font_name: 'fonts/NanumGothic.ttf'


BoxLayout:
