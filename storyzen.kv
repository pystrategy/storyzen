#:import win kivy.core.window
#:import TabbedPanelItem kivy.uix.tabbedpanel

<Splash>:
    on_size: self.center = win.Window.center
    Image:
        source: root.source
        size: win.Window.size

<HButton>:
    font_name: 'fonts/NanumGothic.ttf'

<DropDownBtn>:
    size_hint: None, None
    width: '100dp'
    height: '40dp'

<Category@TabbedPanelItem>:
    font_name: 'fonts/NanumGothic.ttf'
    FloatLayout:
        Field

<Main>:
    TabbedPanel:
        hide: True
        do_default_tab: False

        Category:
            text: '인물'

        Category:
            text: '상황'

        Category:
            text: '행위 '


BoxLayout:
